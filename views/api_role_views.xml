<odoo>

    <!-- List view -->
    <record id="view_api_role_list" model="ir.ui.view">
        <field name="name">api.role.list</field>
        <field name="model">api.role</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="model_id"/>
                <field name="can_read"/>
                <field name="can_create"/>
                <field name="can_write"/>
                <field name="can_unlink"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_api_role_form" model="ir.ui.view">
        <field name="name">api.role.form</field>
        <field name="model">api.role</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_id"/>
                    </group>

                    <group string="Permissions" col="4">
                        <field name="can_read"/>
                        <field name="can_create"/>
                        <field name="can_write"/>
                        <field name="can_unlink"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
