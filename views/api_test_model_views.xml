<!-- api_test_model_views.xml -->
<odoo>
    <record id="view_api_test_model_list" model="ir.ui.view">
        <field name="name">api.test.model.list</field>
        <field name="model">api.test.model</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="mode"/>
                <field name="attachment_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <record id="view_api_test_model_form" model="ir.ui.view">
        <field name="name">api.test.model.form</field>
        <field name="model">api.test.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mode"/>
                        <field name="image_1920" widget="image"/>
                        <field name="attachment_ids" widget="many2many_binary" options="{'image': 'image_1920'}"/>
                        <field name="doc_ids" widget="many2many_binary" options="{'image': 'image_1920'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

 
    
    <!-- Action -->
    <record id="action_api_test_model" model="ir.actions.act_window">
        <field name="name">API Test Models</field>
        <field name="res_model">api.test.model</field>
        <field name="view_mode">list,form</field>
    </record>

       <!-- Menu item (optional) -->
       <menuitem id="menu_api_test_model" name="Test Models"
       parent="menu_api_gateway_root"
       action="action_api_test_model"/>
</odoo>
